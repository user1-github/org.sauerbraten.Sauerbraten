From 003042d4d1e278cad5290a195ec14825589e4631 Mon Sep 17 00:00:00 2001
From: user1-github <56021366+user1-github@users.noreply.github.com>
Date: Fri, 5 Sep 2025 14:18:30 +0300
Subject: [PATCH] Patch makefile to make Sauerbraten find SDL2_image in
 /app/lib

---
 src/Makefile | 2 +-
 1 file changed, 1 insertion(+), 1 deletion(-)

diff --git a/src/Makefile b/src/Makefile
index bb15b25..2af6d8e 100644
--- a/src/Makefile
+++ b/src/Makefile
@@ -66,7 +66,7 @@ CLIENT_LIBS+= -framework SDL2_mixer -framework CoreAudio -framework AudioToolbox
 CLIENT_LIBS+= -framework AudioUnit -framework OpenGL -framework Cocoa -lz -Lenet -lenet
 else
 CLIENT_INCLUDES= $(INCLUDES) -I/usr/X11R6/include `sdl2-config --cflags`
-CLIENT_LIBS= -Lenet -lenet -L/usr/X11R6/lib -lX11 `sdl2-config --libs` -lSDL2_image -lSDL2_mixer -lz -lGL
+CLIENT_LIBS= -L/app/lib -Lenet -lenet -L/usr/X11R6/lib -lX11 `sdl2-config --libs` -lSDL2_image -lSDL2_mixer -lz -lGL
 endif
 endif
 ifeq ($(PLATFORM),LINUX)
